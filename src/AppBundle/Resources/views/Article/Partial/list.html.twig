<ul>
    {% for article in articles %}
        <li>
            <h4>{{ article.title }} (id de l'article : {{ article.id }})</h4>
            <a href="{{ path('article_author', { 'author': article.author}) }}">{{ article.author }}</a>
            <p>{{ article.content }}
                <br>
                {{ article.createdAt|date('d/m/Y H:i') }}
            </p>
        </li>
        <br>
    {% else %}
        <li>Pas d'article trouv√© !</li>
    {% endfor %}
</ul>